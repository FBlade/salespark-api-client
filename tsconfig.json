{
  "compilerOptions": {
    "target": "es6", // Target ECMAScript 6 or higher
    "module": "nodenext", // Support for ESNext modules (common in React)
    "moduleResolution": "nodenext", // Corrige resolução de módulos para pacotes como axios
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Improve interoperability with CommonJS modules
    "skipLibCheck": true, // Skip type checking of declaration files for faster builds
    "forceConsistentCasingInFileNames": true, // Ensure consistent file naming
    "jsx": "react-jsx", // Enable JSX for React
    "types": ["node"], // Include Node.js types to resolve 'process' errors
    "allowJs": true, // Allow JavaScript files to be compiled
    "outDir": "dist", // Output directory for compiled files
    "rootDir": "src" // Root directory for source files
  },
  "include": ["src/**/*"], // Include all files in the 'src' directory
  "exclude": ["node_modules"] // Exclude the 'node_modules' directory
}
